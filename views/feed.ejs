<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Feed â€¢ MicroSocial</title>

  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

  <style>
    body { background: #18181b; }

    /* PROFESSIONAL TYPOGRAPHY SCALE */
    .post-text {
      font-size: 1.1rem;
      line-height: 1.55;
    }

    @media (max-width: 640px) {
      .post-text { font-size: 1.5rem; line-height: 1.7; }
    }

    @media (min-width: 1500px) {
      .post-text { font-size: 1.25rem; }
    }

    /* CARD STYLE */
    .card {
      background: rgba(39,39,42,0.32);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 1rem;
      padding: 1.2rem;
      transition: background 0.2s ease;
    }
    .card:hover {
      background: rgba(43, 43, 46, 0.45);
    }

    /* FEED CONTAINER WIDTH (Twitter standard) */
    .feed-container {
      max-width: 720px;
      width: 100%;
      margin-left: auto;
      margin-right: auto;
    }
  </style>
</head>

<body class="text-white">

  <%- include("partials/header", { user, navClass: "" }) %>

  <div class="feed-container px-4 sm:px-6 md:px-8 py-6">

    <!-- CREATE POST -->
    <form action="/post" method="POST" class="flex gap-3 w-full mb-8">
      <textarea name="content" required placeholder="Share something with the world..."
        class="flex-1 post-text bg-zinc-900 rounded-xl border border-zinc-700 p-4 resize-none focus:ring-2 focus:ring-blue-500 outline-none placeholder-zinc-500">
      </textarea>

      <button class="bg-blue-600 hover:bg-blue-700 px-5 py-3 rounded-xl text-white font-semibold h-auto self-start">
        Post
      </button>
    </form>

    <!-- FEED POSTS -->
    <% if (!posts || posts.length === 0) { %>
      <div class="text-zinc-400 text-center text-lg">No posts yet.</div>
    <% } else { %>

      <div class="flex flex-col gap-6">
        <% posts.forEach(post => { %>
          <%- include("partials/postCard", { post, user }) %>
        <% }) %>
      </div>

    <% } %>

  </div>

</body>
</html>
