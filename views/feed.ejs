<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Feed â€¢ MicroSocial</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/style/global.css">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen">

  <!-- Header -->
  <%- include("partials/header", { user }) %>

  <main class="max-w-2xl mx-auto px-4 pt-6 pb-16">
    <!-- Create Post -->
    <form action="/post" method="POST" class="flex gap-3 w-full mb-8">
      <textarea name="content" required placeholder="What's happening?"
                rows="3"
                class="flex-1 bg-zinc-800 rounded-2xl border border-zinc-700 p-4 resize-none focus:ring-2 focus:ring-blue-500 outline-none placeholder-zinc-500 text-white text-base"></textarea>

      <button class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-xl text-white font-semibold h-fit self-start">
        Post
      </button>
    </form>

    <% if (!posts || posts.length === 0) { %>
      <div class="text-zinc-400 text-center text-lg py-12">No posts yet.</div>
    <% } else { %>
      <div class="flex flex-col divide-y divide-zinc-700">
        <% posts.forEach(post => { %>
          <div class="py-4">
            <%- include("partials/postCard", { post, user }) %>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>

</body>
</html>
