<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= (profileUser || user).name %> â€” Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/style/global.css">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="min-h-screen text-white bg-zinc-900">

  <%- include("partials/header", { user }) %>

  <%
    const displayedUser = profileUser || user;
    const isOwnProfile = !profileUser || String(profileUser._id) === String(user._id);
  %>

  <div class="max-w-3xl mx-auto py-6 px-4 flex flex-col gap-8">
    <div class="bg-zinc-800/40 border border-white/10 p-6 rounded-2xl flex flex-col sm:flex-row gap-6 items-center">
      <div class="relative">
        <img id="profileImg" src="<%= displayedUser.profile %>" alt="profile" class="w-32 h-32 sm:w-36 sm:h-36 rounded-full object-cover border-4 border-white/20" />
        <img id="previewImg" class="hidden absolute inset-0 w-32 h-32 sm:w-36 sm:h-36 rounded-full object-cover border-4 border-green-500 shadow-xl" />
      </div>

      <div class="flex-1">
        <h2 class="profile-name text-2xl sm:text-3xl font-bold"><%= displayedUser.name %></h2>
        <p class="profile-date text-zinc-400 mt-1">Joined <%= new Date(displayedUser.createdAt).toLocaleDateString() %></p>

        <% if (isOwnProfile) { %>
          <form id="uploadForm" action="/profile/upload" method="POST" enctype="multipart/form-data" class="mt-4 flex flex-col gap-3">
            <input id="uploadInput" type="file" name="profile" accept="image/*" class="hidden">
            <label for="uploadInput" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg cursor-pointer inline-block text-sm">Change Photo</label>

            <div id="previewActions" class="hidden flex gap-3">
              <button type="submit" class="bg-green-600 hover:bg-green-700 px-4 py-2 rounded-lg text-sm">Save</button>
              <button type="button" onclick="cancelPreview()" class="bg-zinc-600 hover:bg-zinc-700 px-4 py-2 rounded-lg text-sm">Cancel</button>
            </div>
          </form>
        <% } %>
      </div>
    </div>

    <% if (isOwnProfile) { %>
      <form action="/post" method="POST" class="flex flex-col sm:flex-row gap-3">
        <textarea name="content" placeholder="What's on your mind?" class="flex-1 p-4 bg-zinc-800 border border-zinc-700 rounded-xl resize-none text-white focus:ring-2 focus:ring-blue-500"></textarea>
        <button class="bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-xl">Post</button>
      </form>
    <% } %>

    <h3 class="text-xl sm:text-2xl font-semibold mt-2"><%= isOwnProfile ? "Your Posts" : displayedUser.name + "'s Posts" %></h3>

    <% if (!displayedUser.posts || displayedUser.posts.length === 0) { %>
      <div class="text-zinc-400 text-center py-10">No posts yet.</div>
    <% } else { %>
      <div class="flex flex-col gap-6 mt-2">
        <% displayedUser.posts.forEach(post => { %>
          <div class="bg-zinc-800/40 border border-white/8 p-5 rounded-2xl">
            <%- include("partials/postCard", { post, user }) %>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script>
    const uploadInput = document.getElementById("uploadInput");
    const previewImg = document.getElementById("previewImg");
    const profileImg = document.getElementById("profileImg");
    const previewActions = document.getElementById("previewActions");

    if (uploadInput) {
      uploadInput.addEventListener("change", (e) => {
        const file = e.target.files[0];
        if (!file) return;
        const url = URL.createObjectURL(file);
        previewImg.src = url;
        previewImg.classList.remove("hidden");
        previewActions.classList.remove("hidden");
      });
    }

    function cancelPreview() {
      previewImg.classList.add("hidden");
      previewActions.classList.add("hidden");
      uploadInput.value = "";
    }
  </script>

</body>
</html>
