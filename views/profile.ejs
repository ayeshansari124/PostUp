<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Profile</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white min-h-screen">
  <%- include('partials/header', { user: user }) %>

  <div class="max-w-4xl mx-auto p-6">
    <% const displayed = profileUser || user; %>

    <div class="flex items-center gap-4 mb-6">
      <img src="<%= displayed.profile %>" class="w-24 h-24 rounded-full object-cover" />
      <div>
        <div class="text-2xl font-semibold"><%= displayed.name %></div>
        <div class="text-zinc-400 text-sm">Joined <%= new Date(displayed.createdAt).toLocaleDateString() %></div>
        <% if (!profileUser) { %>
          <a href="/profile/upload" class="mt-2 inline-block bg-blue-600 px-3 py-1 rounded">Upload Photo</a>
        <% } %>
      </div>
    </div>

    <div class="mb-6">
      <div class="font-semibold mb-2">Posts</div>

      <% const posts = displayed.posts || []; %>

      <% if (posts.length === 0) { %>
        <div class="text-zinc-400">No posts yet.</div>
      <% } %>

      <div class="flex flex-col gap-4 mt-3">
      <% posts.forEach(function(post) { %>
        <div class="bg-zinc-800 p-4 rounded">
          <% if (editPostId && editPostId === String(post._id) && (!profileUser || String(profileUser._id) === String(user._id))) { %>
            <form action="/posts/<%= post._id %>/edit" method="post" class="flex flex-col gap-2">
              <textarea name="content" class="w-full p-2 rounded bg-zinc-700"><%= post.content %></textarea>
              <div class="flex gap-2">
                <button class="bg-blue-600 px-3 py-1 rounded">Save</button>
                <a href="/profile" class="bg-zinc-600 px-3 py-1 rounded">Cancel</a>
              </div>
            </form>
          <% } else { %>
            <div class="mb-2"><%= post.content %></div>
            <div class="flex items-center gap-2">
              <form action="/posts/<%= post._id %>/like" method="post" class="inline">
                <% const liked = (post.likes || []).map(l => String(l)).includes(String(user._id)); %>
                <button class="<%= liked ? 'bg-red-600' : 'bg-blue-600' %> px-3 py-1 rounded text-xs">
                  ❤️ <%= (post.likes || []).length %>
                </button>
              </form>

              <% if (String(post.author) === String(user._id)) { %>
                <a href="/posts/<%= post._id %>/edit" class="ml-auto bg-yellow-600 px-2 py-1 rounded text-xs">Edit</a>
                <form action="/posts/<%= post._id %>/delete" method="post" class="inline">
                  <button class="ml-2 bg-red-600 px-2 py-1 rounded text-xs">Delete</button>
                </form>
              <% } %>
            </div>
          <% } %>
        </div>
      <% }) %>
      </div>
    </div>
  </div>
</body>
</html>
