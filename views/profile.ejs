<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= (profileUser || user).name %> - Profile</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

  <style>
    body { background: #18181b; }
    .card-glass {
      background: rgba(39,39,42,0.26);
      border: 1.5px solid rgba(244,244,245,0.11);
      backdrop-filter: blur(8px);
    }
  </style>
</head>

<body class="min-h-screen text-white">
  
  <%- include("partials/header", { user, navClass: "" }) %>

  <% 
    // The user whose profile is being displayed
    const displayedUser = profileUser || user;
    const isOwnProfile = !profileUser || String(profileUser._id) === String(user._id);
  %>

  <div class="max-w-3xl mx-auto py-6 px-4 flex flex-col gap-6">

    <!-- PROFILE CARD -->
    <div class="card-glass p-6 rounded-2xl flex flex-col sm:flex-row gap-6 items-center">

      <!-- IMAGE -->
      <div class="relative">
        <img id="profileImg"
          src="<%= displayedUser.profile %>"
          class="w-32 h-32 rounded-full object-cover border-4 border-white/20"
        />

        <img id="previewImg"
          class="hidden absolute inset-0 w-32 h-32 rounded-full object-cover border-4 border-green-500 shadow-xl"
        />
      </div>

      <!-- INFO -->
      <div class="flex-1">
        <h2 class="text-2xl font-bold"><%= displayedUser.name %></h2>
        <p class="text-zinc-400 mt-1">
          Joined <%= new Date(displayedUser.createdAt).toLocaleDateString() %>
        </p>

        <% if (isOwnProfile) { %>
        <!-- UPLOAD FORM -->
        <form id="uploadForm" action="/profile/upload" method="POST" enctype="multipart/form-data" class="mt-4 flex flex-col gap-3">
          
          <input id="uploadInput" type="file" name="profile" accept="image/*" class="hidden">

            <label for="uploadInput"
              class="bg-blue-600 px-4 py-2 rounded-lg cursor-pointer hover:bg-blue-700 inline-block w-auto"
              style="display: inline-block; width: auto; min-width: 0;">
              Choose Photo
            </label>
            

          <div id="previewActions" class="hidden flex gap-3">
            <button class="bg-green-600 hover:bg-green-700 px-4 py-2 rounded-lg" type="submit">Save</button>
            <button type="button" onclick="cancelPreview()" class="bg-zinc-600 hover:bg-zinc-700 px-4 py-2 rounded-lg">Cancel</button>
          </div>

        </form>
        <% } %>

      </div>
    </div>

    <!-- CREATE POST (OWN PROFILE ONLY) -->
    <% if (isOwnProfile) { %>
    <form action="/post" method="POST" class="flex flex-col sm:flex-row gap-3">
      <textarea name="content" placeholder="What's on your mind?"
        class="flex-1 p-3 bg-transparent border border-zinc-700 rounded-lg resize-none"></textarea>

      <button class="bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg">
        Post
      </button>
    </form>
    <% } %>

    <!-- POSTS -->
<h3 class="text-xl font-semibold mt-4 mb-4">
  <%= isOwnProfile ? "Your Posts" : displayedUser.name + "'s Posts" %>
</h3>

<% if (!displayedUser.posts || displayedUser.posts.length === 0) { %>
  <div class="text-zinc-400 text-center mb-10">No posts yet.</div>
<% } else { %>
  <div class="flex flex-wrap gap-8 mb-6">
    <% displayedUser.posts.forEach(function(post) { %>
      <div class="flex-1 min-w-[320px] max-w-md"
           style="padding:1.15rem">
        <%- include('partials/postCard', { post: post, user: user, noBorder: true }) %>
      </div>
    <% }) %>
  </div>
<% } %>

  </div>

  <script>
    const uploadInput = document.getElementById("uploadInput");
    const previewImg = document.getElementById("previewImg");
    const profileImg = document.getElementById("profileImg");
    const previewActions = document.getElementById("previewActions");

    if (uploadInput) {
      uploadInput.addEventListener("change", e => {
        const file = e.target.files[0];
        if (!file) return;

        const url = URL.createObjectURL(file);

        previewImg.src = url;
        previewImg.classList.remove("hidden");

        previewActions.classList.remove("hidden");
      });
    }

    function cancelPreview() {
      previewImg.classList.add("hidden");
      previewActions.classList.add("hidden");
      uploadInput.value = "";
    }
  </script>

</body>
</html>
